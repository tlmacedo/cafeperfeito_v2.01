<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="painelViewLogin" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="175.0" prefWidth="450.0" styleClass="view-login"
            stylesheets="@../style/css/cafeperfeito.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml" fx:controller="br.com.tlmacedo.cafeperfeito.controller.ControllerLogin">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="titulo" minHeight="35.0" prefHeight="35.0" prefWidth="450.0" styleClass="h1"
                       text="login no sistema">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Label>
                <HBox prefHeight="30.0" prefWidth="430.0">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <children>
                        <Label alignment="CENTER" prefHeight="24.0" prefWidth="24.0" styleClass="usuario-login">
                            <HBox.margin>
                                <Insets top="6.0"/>
                            </HBox.margin>
                        </Label>
                        <VBox>
                            <HBox.margin>
                                <Insets left="5.0" top="10.0"/>
                            </HBox.margin>
                            <children>
                                <Label text="Selecione usuário:"/>
                                <ComboBox fx:id="cboUsuarioLogin" accessibleText="value::;" maxHeight="-Infinity"
                                          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                          prefHeight="20.0" prefWidth="400.0" promptText="Selecione um usuário:">
                                    <padding>
                                        <Insets left="5.0" right="5.0"/>
                                    </padding>
                                </ComboBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox prefHeight="30.0" prefWidth="430.0">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                    <children>
                        <Label alignment="CENTER" prefHeight="24.0" prefWidth="24.0" styleClass="usuario-senha">
                            <HBox.margin>
                                <Insets top="6.0"/>
                            </HBox.margin>
                        </Label>
                        <PasswordField fx:id="pswUsuarioSenha" prefHeight="30.0" prefWidth="400.0" promptText="Senha">
                            <HBox.margin>
                                <Insets left="5.0" top="10.0"/>
                            </HBox.margin>
                        </PasswordField>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="200.0">
                    <children>
                        <!--<JFXButton fx:id="btnCancela" cancelButton="true" prefHeight="25.0" prefWidth="100.0"-->
                        <!--styleClass="btn_cancel" text="Cancela">-->
                        <!--<graphic>-->
                        <!--<Label/>-->
                        <!--</graphic>-->
                        <!--</JFXButton>-->
                        <Button fx:id="btnOK" defaultButton="true" prefHeight="25.0" prefWidth="90.0"
                                styleClass="btn-default" text="Ok">
                            <graphic>
                                <Label/>
                            </graphic>
                        </Button>
                        <Button fx:id="btnCancela" cancelButton="true" prefHeight="25.0" prefWidth="100.0"
                                styleClass="btn-cancel" text="Cancela">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                            <graphic>
                                <Label/>
                            </graphic>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
